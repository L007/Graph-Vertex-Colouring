<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="nurul.id.graphvertexcolouring.Level6">

    <include
        android:id="@+id/appBar"
        layout="@layout/app_bar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@id/appBar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/judul"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Graph C3"
                android:textAlignment="center"
                android:textColor="#000"
                android:textSize="30dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Color : "
                    android:textColor="#000"
                    android:textSize="20dp" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="1dp"
                    android:background="@drawable/yellow" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="1dp"
                    android:background="@drawable/blue" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Maximum Click : 1"
                android:textAlignment="center"
                android:textColor="#000"
                android:textSize="20dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Clicks Left :"
                    android:textColor="#000"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/click_left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="0"
                    android:textColor="#000"
                    android:textSize="20dp" />

            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="5dp">
                <ImageView
                    android:layout_marginTop="50dp"
                    android:layout_width="300dp"
                    android:layout_height="250dp"
                    android:background="@drawable/line"
                    android:layout_centerHorizontal="true"/>
                <ImageView
                    android:layout_marginTop="50dp"
                    android:layout_width="300dp"
                    android:layout_height="250dp"
                    android:background="@drawable/line"
                    android:rotation="60"
                    android:layout_centerHorizontal="true"/>
                <ImageView
                    android:layout_marginTop="50dp"
                    android:layout_width="300dp"
                    android:layout_height="250dp"
                    android:background="@drawable/line"
                    android:rotation="-60"
                    android:layout_centerHorizontal="true"/>
                <ImageButton
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/Vertex1"
                    android:background="@drawable/yellow"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="250dp"/>
                <ImageButton
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/Vertex2"
                    android:background="@drawable/yellow"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="210dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="40dp"/>
                <ImageButton
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/Vertex3"
                    android:background="@drawable/yellow"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="90dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="40dp"/>
                <ImageButton
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/Vertex4"
                    android:background="@drawable/yellow"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="40dp"/>
                <ImageButton
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/Vertex5"
                    android:background="@drawable/yellow"
                    android:layout_marginTop="90dp"
                    android:layout_marginLeft="40dp"/>
                <ImageButton
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/Vertex6"
                    android:background="@drawable/yellow"
                    android:layout_marginTop="210dp"
                    android:layout_marginLeft="40dp"/>
                <ImageButton
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/Vertex7"
                    android:background="@drawable/yellow"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="145dp"/>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>
