<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Level19">

    <include
        android:id="@+id/appBar"
        layout="@layout/app_bar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@id/appBar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/judul"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="Firecrackers Graph"
                        android:textAlignment="center"
                        android:textColor="#000"
                        android:textSize="18dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Waktu : "
                            android:textColor="#000"
                            android:textSize="20dp" />

                        <TextView
                            android:id="@+id/timer"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textColor="#ff0000"
                            android:textSize="20dp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Warna : "
                            android:textColor="#000"
                            android:textSize="20dp" />

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="1dp"
                            android:background="@drawable/yellow" />

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="1dp"
                            android:background="@drawable/blue" />

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="1dp"
                            android:background="@drawable/red" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/max_click"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="Maksimal klik : 4"
                        android:textAlignment="center"
                        android:textColor="#000"
                        android:textSize="20dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Sisa klik :"
                            android:textColor="#000"
                            android:textSize="20dp" />

                        <TextView
                            android:id="@+id/click_left"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:text="0"
                            android:textColor="#000"
                            android:textSize="20dp" />

                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="50dp"
                android:paddingBottom="10dp">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginLeft="45dp"
                    android:layout_marginTop="35dp"
                    android:background="@drawable/line"
                    android:rotation="90" />

                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/line" />

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="45dp"
                    android:layout_marginTop="35dp"
                    android:background="@drawable/line"
                    android:rotation="90" />

                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="25dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/line" />

                <ImageView
                    android:layout_width="260dp"
                    android:layout_height="180dp"
                    android:layout_marginLeft="45dp"
                    android:layout_marginTop="75dp"
                    android:background="@drawable/line"
                    android:rotation="90" />

                <ImageButton
                    android:id="@+id/Vertex1"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="82.5dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/yellow" />

                <ImageButton
                    android:id="@+id/Vertex5"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="135dp"
                    android:layout_marginTop="65dp"
                    android:background="@drawable/yellow" />

                <ImageButton
                    android:id="@+id/Vertex4"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="82.5dp"
                    android:layout_marginTop="65dp"
                    android:background="@drawable/yellow" />

                <ImageButton
                    android:id="@+id/Vertex3"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="65dp"
                    android:background="@drawable/yellow" />

                <ImageButton
                    android:id="@+id/Vertex9"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_alignLeft="@+id/Vertex4"
                    android:layout_alignStart="@+id/Vertex4"
                    android:layout_alignTop="@+id/Vertex10"
                    android:background="@drawable/yellow" />

                <ImageButton
                    android:id="@+id/Vertex2"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="82.5dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/yellow" />

                <ImageButton
                    android:id="@+id/Vertex6"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="135dp"
                    android:layout_marginTop="65dp"
                    android:background="@drawable/yellow" />

                <ImageButton
                    android:id="@+id/Vertex7"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="82.5dp"
                    android:layout_marginTop="65dp"
                    android:background="@drawable/yellow" />

                <ImageButton
                    android:id="@+id/Vertex8"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="65dp"
                    android:background="@drawable/yellow" />

                <ImageButton
                    android:id="@+id/Vertex10"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="82.5dp"
                    android:layout_marginTop="145dp"
                    android:background="@drawable/yellow" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>