<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Level13">

    <include
        android:id="@+id/appBar"
        layout="@layout/app_bar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@id/appBar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/judul"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="Banana Graph"
                        android:textAlignment="center"
                        android:textColor="#000"
                        android:textSize="22dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Waktu : "
                            android:textColor="#000"
                            android:textSize="20dp" />

                        <TextView
                            android:id="@+id/timer"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textColor="#ff0000"
                            android:textSize="20dp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Warna : "
                            android:textColor="#000"
                            android:textSize="20dp" />

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="1dp"
                            android:background="@drawable/yellow" />

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="1dp"
                            android:background="@drawable/blue" />

                        <!--<ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="1dp"
                            android:background="@drawable/red" />-->

                    </LinearLayout>

                    <TextView
                        android:id="@+id/max_click"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="Maksimal klik : 4"
                        android:textAlignment="center"
                        android:textColor="#000"
                        android:textSize="20dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Sisa klik :"
                            android:textColor="#000"
                            android:textSize="20dp" />

                        <TextView
                            android:id="@+id/click_left"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:text="0"
                            android:textColor="#000"
                            android:textSize="20dp" />

                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="50dp"
                android:paddingBottom="10dp">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp"
                    android:rotation="-40"
                    android:background="@drawable/line" />
                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="55dp"
                    android:rotation="40"
                    android:background="@drawable/line" />
                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="70dp"
                    android:layout_marginLeft="38dp"
                    android:background="@drawable/line" />
                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="130dp"
                    android:rotation="-40"
                    android:background="@drawable/line" />
                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="165dp"
                    android:rotation="40"
                    android:background="@drawable/line" />
                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="70dp"
                    android:layout_marginLeft="148dp"
                    android:background="@drawable/line" />
                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_alignParentRight="true"
                    android:rotation="40"
                    android:background="@drawable/line"
                    android:id="@+id/imageView" />
                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="55dp"
                    android:layout_alignParentRight="true"
                    android:rotation="-40"
                    android:background="@drawable/line" />
                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="70dp"
                    android:layout_marginRight="38dp"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/line" />
                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_marginTop="115dp"
                    android:layout_marginLeft="50dp"
                    android:rotation="-45"
                    android:background="@drawable/line" />
                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_marginTop="115dp"
                    android:layout_marginRight="50dp"
                    android:layout_alignParentRight="true"
                    android:rotation="45"
                    android:background="@drawable/line" />
                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_marginTop="120dp"
                    android:layout_marginLeft="118dp"
                    android:background="@drawable/line" />

                <ImageButton
                    android:id="@+id/Vertex8"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="25dp"
                    android:background="@drawable/yellow" />
                <ImageButton
                    android:id="@+id/Vertex9"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="85dp"
                    android:background="@drawable/yellow" />
                <ImageButton
                    android:id="@+id/Vertex5"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginTop="55dp"
                    android:layout_marginLeft="55dp"
                    android:background="@drawable/yellow" />
                <ImageButton
                    android:id="@+id/Vertex2"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginTop="115dp"
                    android:layout_marginLeft="55dp"
                    android:background="@drawable/yellow" />
                <ImageButton
                    android:id="@+id/Vertex10"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="135dp"
                    android:background="@drawable/yellow" />
                <ImageButton
                    android:id="@+id/Vertex11"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="195dp"
                    android:background="@drawable/yellow" />
                <ImageButton
                    android:id="@+id/Vertex6"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginTop="55dp"
                    android:layout_marginLeft="165dp"
                    android:background="@drawable/yellow" />
                <ImageButton
                    android:id="@+id/Vertex3"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginTop="115dp"
                    android:layout_marginLeft="165dp"
                    android:background="@drawable/yellow" />
                <ImageButton
                    android:id="@+id/Vertex13"
                    android:layout_alignParentRight="true"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="25dp"
                    android:background="@drawable/yellow" />
                <ImageButton
                    android:id="@+id/Vertex12"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="85dp"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/yellow" />

                <ImageButton
                    android:id="@+id/Vertex7"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_alignBottom="@+id/imageView"
                    android:layout_alignLeft="@+id/imageView"
                    android:layout_alignStart="@+id/imageView"
                    android:background="@drawable/yellow" />
                <ImageButton
                    android:id="@+id/Vertex4"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginTop="115dp"
                    android:layout_marginRight="55dp"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/yellow" />
                <ImageButton
                    android:id="@+id/Vertex1"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginTop="225dp"
                    android:layout_marginLeft="165dp"
                    android:background="@drawable/yellow" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>