<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="nurul.id.graphvertexcolouring.C6Fragment">

    <TextView
        android:id="@+id/judul"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Graph C6"
        android:textAlignment="center"
        android:textColor="#000"
        android:textSize="30dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Color : "
            android:textColor="#000"
            android:textSize="20dp" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="1dp"
            android:background="@drawable/yellow" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="1dp"
            android:background="@drawable/blue" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="1dp"
            android:background="@drawable/red" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Maximum Click : 3"
        android:textAlignment="center"
        android:textColor="#000"
        android:textSize="20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Clicks Left :"
            android:textColor="#000"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/click_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="0"
            android:textColor="#000"
            android:textSize="20dp" />

    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_centerHorizontal="true"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:rotation="90"
            android:background="@drawable/line"/>
        <ImageView
            android:layout_marginTop="60dp"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:rotation="30"
            android:background="@drawable/line"/>
        <ImageView
            android:layout_marginTop="180dp"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:rotation="-30"
            android:background="@drawable/line"/>
        <ImageView
            android:layout_alignParentRight="true"
            android:layout_marginTop="60dp"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:rotation="-30"
            android:background="@drawable/line"/>
        <ImageView
            android:layout_alignParentRight="true"
            android:layout_marginTop="180dp"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:rotation="30"
            android:background="@drawable/line"/>
        <ImageView
            android:layout_marginTop="240dp"
            android:layout_centerHorizontal="true"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:rotation="90"
            android:background="@drawable/line"/>

        <ImageButton
            android:id="@+id/Vertex5"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/yellow" />

        <ImageButton
            android:id="@+id/Vertex4"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="80dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/yellow" />

        <ImageButton
            android:id="@+id/Vertex6"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="165dp"
            android:background="@drawable/yellow" />

        <ImageButton
            android:id="@+id/Vertex3"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_marginTop="165dp"
            android:background="@drawable/yellow" />

        <ImageButton
            android:id="@+id/Vertex1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="290dp"
            android:background="@drawable/yellow" />

        <ImageButton
            android:id="@+id/Vertex2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="80dp"
            android:layout_marginTop="290dp"
            android:background="@drawable/yellow" />

    </RelativeLayout>


</LinearLayout>
