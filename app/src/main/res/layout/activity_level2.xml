<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="nurul.id.graphvertexcolouring.Level2">

    <include
        android:id="@+id/appBar"
        layout="@layout/app_bar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@id/appBar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/judul"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="Lobster Graph"
                        android:textAlignment="center"
                        android:textColor="#000"
                        android:textSize="23dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Waktu : "
                            android:textColor="#000"
                            android:textSize="20dp" />

                        <TextView
                            android:id="@+id/timer"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textColor="#ff0000"
                            android:textSize="20dp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Warna : "
                            android:textColor="#000"
                            android:textSize="20dp" />

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="1dp"
                            android:background="@drawable/yellow" />

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="1dp"
                            android:background="@drawable/blue" />

                        <!--<ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="1dp"
                            android:background="@drawable/red" />-->

                    </LinearLayout>

                    <TextView
                        android:id="@+id/max_click"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="Maksimal klik : 2"
                        android:textAlignment="center"
                        android:textColor="#000"
                        android:textSize="20dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Sisa klik :"
                            android:textColor="#000"
                            android:textSize="20dp" />

                        <TextView
                            android:id="@+id/click_left"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:text="0"
                            android:textColor="#000"
                            android:textSize="20dp" />

                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="10dp">

                <ImageView
                    android:layout_width="170dp"
                    android:layout_height="190dp"
                    android:layout_marginLeft="65dp"
                    android:background="@drawable/line"
                    android:rotation="-20" />
                <ImageView
                    android:layout_width="170dp"
                    android:layout_height="190dp"
                    android:background="@drawable/line"
                    android:rotation="20" />
                <ImageView
                    android:layout_width="170dp"
                    android:layout_height="190dp"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/line"
                    android:rotation="-20" />
                <ImageView
                    android:layout_width="170dp"
                    android:layout_height="190dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="65dp"
                    android:background="@drawable/line"
                    android:rotation="20" />

                <ImageButton
                    android:id="@+id/Vertex1"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="150dp"
                    android:background="@drawable/yellow" />
                <ImageButton
                    android:id="@+id/Vertex3"
                    android:layout_centerHorizontal="true"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginTop="150dp"
                    android:background="@drawable/yellow" />
                <ImageButton
                    android:id="@+id/Vertex5"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginRight="40dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="150dp"
                    android:background="@drawable/yellow" />
                <ImageButton
                    android:id="@+id/Vertex2"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="100dp"
                    android:background="@drawable/yellow" />
                <ImageButton
                    android:id="@+id/Vertex4"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginRight="100dp"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/yellow" />


            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>
