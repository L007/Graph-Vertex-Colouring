<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="nurul.id.graphvertexcolouring.StartActivity">

    <ImageView
        android:layout_width="180dp"
        android:layout_height="205dp"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:background="@mipmap/logo_graph1" />

    <LinearLayout
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="80dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnMain"
            android:layout_width="115dp"
            android:layout_height="115dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/circle_button"
            android:drawableTop="@drawable/ic_play_arrow_black_24dp"
            android:padding="20dp"
            android:text="Play"
            android:textColor="#FFF"
            android:translationZ="10dp" />

        <Button
            android:id="@+id/btnMateri"
            android:layout_width="115dp"
            android:layout_height="115dp"
            android:layout_marginLeft="30dp"
            android:background="@drawable/circle_button"
            android:drawableTop="@drawable/ic_book_black_24dp"
            android:padding="20dp"
            android:text="Materi"
            android:textColor="#FFF"
            android:translationZ="10dp" />
    </LinearLayout>


</LinearLayout>
