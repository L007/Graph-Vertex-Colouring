<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="nurul.id.graphvertexcolouring.MainActivity">

    <include
        android:id="@+id/appBar"
        layout="@layout/app_bar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="10dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pilih Level "
                    android:textColor="#000"
                    android:textSize="25dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="10dp">

                <Button
                    android:id="@+id/level1"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@drawable/rectangle_red"
                    android:text="1" />

                <Button
                    android:id="@+id/level2"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/rectangle_grey"
                    android:text="2" />

                <Button
                    android:id="@+id/level3"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/rectangle_grey"
                    android:text="3" />

                <Button
                    android:id="@+id/level4"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/rectangle_grey"
                    android:text="4" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="10dp">

                <Button
                    android:id="@+id/level5"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@drawable/rectangle_grey"
                    android:text="5" />

                <Button
                    android:id="@+id/level6"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/rectangle_grey"
                    android:text="6" />

                <Button
                    android:id="@+id/level7"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/rectangle_grey"
                    android:text="7" />

                <Button
                    android:id="@+id/level8"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/rectangle_grey"
                    android:text="8" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="10dp">

                <Button
                    android:id="@+id/level9"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@drawable/rectangle_grey"
                    android:text="9" />

                <Button
                    android:id="@+id/level10"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/rectangle_grey"
                    android:text="10" />

                <Button
                    android:id="@+id/level11"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/rectangle_grey"
                    android:text="11" />

                <Button
                    android:id="@+id/level12"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/rectangle_grey"
                    android:text="12" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="10dp">

                <Button
                    android:id="@+id/level13"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@drawable/rectangle_grey"
                    android:text="13" />

                <Button
                    android:id="@+id/level14"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/rectangle_grey"
                    android:text="14" />

                <Button
                    android:id="@+id/level15"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/rectangle_grey"
                    android:text="15" />

                <Button
                    android:id="@+id/level16"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/rectangle_grey"
                    android:text="16" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="10dp">

                <Button
                    android:id="@+id/level17"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@drawable/rectangle_grey"
                    android:text="17" />

                <Button
                    android:id="@+id/level18"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/rectangle_grey"
                    android:text="18" />

                <Button
                    android:id="@+id/level19"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/rectangle_grey"
                    android:text="19" />

                <Button
                    android:id="@+id/level20"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/rectangle_grey"
                    android:text="20" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
