<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="nurul.id.graphvertexcolouring.Level7">

    <include
        android:id="@+id/appBar"
        layout="@layout/app_bar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@id/appBar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/judul"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="Broom Graph"
                        android:textAlignment="center"
                        android:textColor="#000"
                        android:textSize="25dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="TIME : "
                            android:textColor="#000"
                            android:textSize="20dp" />

                        <TextView
                            android:id="@+id/timer"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textColor="#ff0000"
                            android:textSize="20dp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Color : "
                            android:textColor="#000"
                            android:textSize="20dp" />

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="1dp"
                            android:background="@drawable/yellow" />

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="1dp"
                            android:background="@drawable/blue" />

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="1dp"
                            android:background="@drawable/red" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="Maximum Click : 4"
                        android:textAlignment="center"
                        android:textColor="#000"
                        android:textSize="20dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Clicks Left :"
                            android:textColor="#000"
                            android:textSize="20dp" />

                        <TextView
                            android:id="@+id/click_left"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:text="0"
                            android:textColor="#000"
                            android:textSize="20dp" />

                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>


            <RelativeLayout
                android:layout_marginTop="30dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="10dp">

                <ImageView
                    android:layout_width="170dp"
                    android:layout_height="170dp"
                    android:layout_marginTop="65dp"
                    android:layout_marginLeft="30dp"
                    android:background="@drawable/line"
                    android:rotation="90"/>
                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_marginTop="40dp"
                    android:layout_marginLeft="175dp"
                    android:background="@drawable/line"
                    android:rotation="60"/>
                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_marginTop="110dp"
                    android:layout_marginLeft="175dp"
                    android:background="@drawable/line"
                    android:rotation="-60"/>
                <ImageView
                    android:layout_width="180dp"
                    android:layout_height="180dp"
                    android:layout_marginLeft="160dp"
                    android:background="@drawable/line"
                    android:rotation="45"/>
                <ImageView
                    android:layout_width="180dp"
                    android:layout_height="180dp"
                    android:layout_marginLeft="160dp"
                    android:layout_marginTop="120dp"
                    android:background="@drawable/line"
                    android:rotation="-45"/>
                <ImageButton
                    android:id="@+id/Vertex1"
                    android:layout_marginTop="10dp"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="30dp"
                    android:background="@drawable/yellow" />
                <ImageButton
                    android:id="@+id/Vertex2"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="65dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="30dp"
                    android:background="@drawable/yellow" />
                <ImageButton
                    android:id="@+id/Vertex3"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="205dp"
                    android:layout_marginRight="30dp"
                    android:background="@drawable/yellow" />
                <ImageButton
                    android:id="@+id/Vertex4"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="260dp"
                    android:layout_marginRight="30dp"
                    android:background="@drawable/yellow" />
                <ImageButton
                    android:id="@+id/Vertex5"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="135dp"
                    android:layout_marginLeft="175dp"
                    android:background="@drawable/yellow" />
                <ImageButton
                    android:id="@+id/Vertex6"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="135dp"
                    android:layout_marginLeft="125dp"
                    android:background="@drawable/yellow" />
                <ImageButton
                    android:id="@+id/Vertex7"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="135dp"
                    android:layout_marginLeft="75dp"
                    android:background="@drawable/yellow" />
                <ImageButton
                    android:id="@+id/Vertex8"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="135dp"
                    android:layout_marginLeft="25dp"
                    android:background="@drawable/yellow" />


            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>
